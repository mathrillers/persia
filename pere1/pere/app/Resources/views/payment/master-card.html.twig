
{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="log_form">
                <h1>Charge $10 with Simplify Commerce</h1>
                <form id="simplify-payment-form" action="" method="POST">
                    <!-- The $10 amount is set on the server side -->
                    <div>
                        <label>Credit Card Number: </label>
                        <div class="controls  col-sm-12">
                            <input id="cc-number" class="form-control" type="text" maxlength="20" autocomplete="off" value="" autofocus />
                        </div>
                    </div>
                    <div>
                        <label>CVC: </label>
                        <div class="controls  col-sm-12">
                            <input id="cc-cvc" class="form-control" type="text" maxlength="4" autocomplete="off" value=""/>
                        </div>
                    </div>
                    <div>
                        <label>Expiry Date: </label>
                        <div class="form-group">
                            <div class="controls  col-sm-6">
                                <select id="cc-exp-month" class="form-control">
                                    <option value="01">Jan</option>
                                    <option value="02">Feb</option>
                                    <option value="03">Mar</option>
                                    <option value="04">Apr</option>
                                    <option value="05">May</option>
                                    <option value="06">Jun</option>
                                    <option value="07">Jul</option>
                                    <option value="08">Aug</option>
                                    <option value="09">Sep</option>
                                    <option value="10">Oct</option>
                                    <option value="11">Nov</option>
                                    <option value="12">Dec</option>
                                </select>
                            </div >
                            <div class=" controls col-md-6">
                                <select id="cc-exp-year" class="form-control">
                                    <option value="15">2015</option>
                                    <option value="16">2016</option>
                                    <option value="17">2017</option>
                                    <option value="18">2018</option>
                                    <option value="19">2019</option>
                                    <option value="20">2020</option>
                                    <option value="21">2021</option>
                                    <option value="22">2022</option>
                                    <option value="23">2023</option>
                                    <option value="24">2024</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button id="process-payment-btn" class="btn btn-primary btn-lg btn-block" type="submit">Process Payment</button>
                    <div id="buy-with-masterpass-div"></div>
                </form>
            </div>
        </div>
    </div>
</div>