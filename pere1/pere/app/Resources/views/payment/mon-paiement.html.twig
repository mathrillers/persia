
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="alert text-center alert-success flash-notice alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashbag.get('error') %}
        <div class="alert text-center alert-danger flash-notice alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ flash_message }}
        </div>
    {% endfor %}


<div class="modal-dialog" style="text-align: center ;width: 700px">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="log_form" style="text-align: center">
                <h2 data-readOnly=""></h2>


                <div class="container">
                    <section id="pricg_sec">
                        <div class="row">
                            <!-- Pricing Table 1 -->
                            <div class="col-xs-6">
                                <div class="pric_tab ">
                                    <h2 class="tab_titl text-center">
                                        Réservation: {{ annonce.titre }}
                                    </h2>
                                    <div class="spacer-20"></div>
                                    <div class="form-group ">

                                        {{ form_start(formPay, { 'name':'payment-form','method': 'POST','attr': {'id':'payment-form','class': 'form'} } ) }}

                                        <div class="col-md-4">
                                            <label>L'annonce :</label>
                                        </div>
                                        <div class="col-md-8">
                                            {{ annonce.description }}
                                        </div>
                                        <div class="spacer-20"></div>
                                        <!-- The $10 amount is set on the server side -->
                                        <div id="payment-form-now" class="hosted-form">

                                            {% if annonce.typeDelai %}
                                                <div class="pric_ara">

                                                    <h3 class="pric">  {{ annonce.prixDelai *annonce.periodeDelai }}Dh<i> Total </i></h3>
                                                </div>
                                                <ul class="pric_feat">
                                                    <li> Description de L'annonce :

                                                        {{ annonce.description }}
                                                    </li>
                                                    <li> Durée : {{ annonce.periodeDelai }}<i> Jours. </i></li>

                                                </ul>

                                            {% else %}

                                                <ul class="pric_feat">
                                                    <li> Caution : {{ annonce.prixDelai }} Dh  </li>
                                                    <li> 1er Mois de loyer : {{ annonce.prixDelai }} Dh </li>
                                                    <li> Commission : {{ annonce.prixDelai }} Dh </li>

                                                </ul>

                                                <div class="pric_ara">

                                                    <h3 class="pric"> Total : {{ annonce.prixDelai*3 }}<i> Dh </i></h3>

                                                </div>

                                            {% endif %}


                                        </div>




                                        </div>


                                        <!-- Pricing Section -->



                                        <div class="spacer-30"></div>
                                        {{form_widget(formPay.valider, {'id':'process-payment-btn','name':'proceder_paiement','attr': { 'class': 'btn btn-primary btn-lg btn-block'}} )  }}


                                        {{ form_end(formPay,{'render_rest':false}) }}
                                    </div>
                                </div>
                            </div>

                    </section>
                </div>

            </div>
        </div>
    </div>
</div>
