{% extends 'admin/layout.html.twig' %}

{% block body %}
{{ parent() }}
<body>
<!-- container section start -->
<section id="container" class="">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Liste des Utilisateurs</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Home</a></li>
                        <li><i class="fa fa-table"></i>Utilisateurs</li>
                        <li><i class="fa fa-th-list"></i>Nouveau Utilisateur</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->


            <a class="btn btn-navbar" href="{{ path('utilisateur_index') }}">Liste des Utilisateurs</a>


            <!--***********************************************************************************-->
            <!-- Form validations -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Cree Un Nouveau Utilisateur
                        </header>
                        <div class="panel-body">
                            <div class="form">
                                {{ form_start(form,{  'id':'feedback_form','method':'POST','attr':{'class':'form-validate form-horizontal'}}) }}

                                {{ form_errors(form) }}
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.nom) }} </div>
                                    <div class="col-lg-4">  {{ form_widget(form.nom, {'attr': {'class': 'form-control '}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.prenom) }} </div>
                                    <div class="col-lg-4">   {{ form_widget(form.prenom, {'attr': {'class': 'form-control '}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.email) }} </div>
                                    <div class="col-lg-4">   {{ form_widget(form.email, {'attr': {'class': 'form-control '}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.adresse) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control '}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.telephone) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control '}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6" style="text-align: center"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ form_label(form.dateNaissance) }} </div>
                                    <div class="col-lg-4">    {{ form_widget(form.dateNaissance,{ 'attr':{'class':'form-control'}}) }}
                                    </div>


                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"> {{ form_label(form.pays ) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.pays,{'placeholder' : 'Choisir un Pays !'}) }}
                                    </div>


                                </div>
                                <div class="form-group ">

                                    <div class="col-lg-6 "> {{ form_label(form.ville) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.ville,{'placeholder' : 'Choisir une Ville !'}) }}

                                    </div>

                                </div>

                                <div class="form-group ">

                                    <div class="col-lg-6">{{ form_label(form.compte.username) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.compte.username, {'attr': {'class': 'form-control '}}) }}
                                    </div>

                                </div>

                                <div class="form-group ">

                                    <div class="col-lg-6"> {{ form_label(form.compte.password.first) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.compte.password.first) }}
                                    </div>

                                </div>
                                <div class="form-group ">

                                    <div class="col-lg-6"> {{ form_label(form.compte.password.second) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.compte.password.second) }}
                                    </div>

                                </div>
                                <div class="form-group ">

                                    <div class="col-lg-6">{{ form_label(form.compte.active) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.compte.active, {'attr': {'class': 'form-control '}}) }}
                                    </div>

                                </div>
                               {# <div class="form-group ">

                                    <div class="col-lg-6"> {{ form_label(form.compte.salt) }} </div>
                                    <div class="col-lg-4">
                                        {{ form_widget(form.compte.salt, {'attr': {'class': 'form-control '}}) }}
                                    </div>

                                </div>#}

                                <div class="form-group ">

                                    <div class="col-lg-6">{{ form_label(form.compte.role) }} </div>
                                    <div class="col-lg-4">

                                        {{ form_widget(form.compte.role, {'attr': {'class': 'form-control '}}) }}

                                    </div>

                                </div>
                       {#         <div class="form-group ">
                                    <label class="control-label col-lg-2 required" for="personne_ville">Ville </label>


                                    <div class="col-lg-10">
                                        <select  class="form-control" name="Op">
                                            {% for role in roles %}
                                                <option value="{{ role.roleId }}" >{{ role.roleNom }}</option>
                                            {% endfor %}

                                        </select>
                                    </div>

                                </div>#}
                                {#</form>#}

                                <br><br> <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-10">
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button class="btn btn-primary" type="submit">Save</button>
                                        <button class="btn btn-default" type="reset">Cancel</button>
                                    </div>
                                </div>
                                {{ form_end(form,{'render_rest':false}) }}

                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
{% endblock %}
