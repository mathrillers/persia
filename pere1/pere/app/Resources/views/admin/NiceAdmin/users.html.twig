{% extends ':admin:layout.html.twig' %}

{% block body %}
    {{ parent() }}
  <body>
  <!-- container section start -->
  <section id="container" class="">

      <section id="main-content">
          <section class="wrapper">
		  <div class="row">
				<div class="col-lg-12">
					<h3 class="page-header"><i class="fa fa-table"></i> Liste des Utilisateurs</h3>
					<ol class="breadcrumb">
						<li><i class="fa fa-home"></i><a href="../layout.html.twig">Home</a></li>
						<li><i class="fa fa-table"></i>Utilisateurs</li>
						<li><i class="fa fa-th-list"></i>Liste Utilisateur</li>
					</ol>
				</div>
			</div>
              <!-- page start-->


              <div class="row">
                  <div class="col-lg-12">
                      <section class="panel">
                          <header class="panel-heading">
                              Tableau des Utilisateurs
                          </header>
                          
                          <table class="table table-striped table-advance table-hover">
                           <tbody>
                            {#  <tr>
                                 <th><i class="icon_profile"></i> Full Name</th>
                                 <th><i class="icon_calendar"></i> Date</th>
                                 <th><i class="icon_mail_alt"></i> Email</th>
                                 <th><i class="icon_pin_alt"></i> City</th>
                                 <th><i class="icon_mobile"></i> Mobile</th>
                                 <th><i class="icon_cogs"></i> Action</th>
                              </tr>#}
                            <tr>
                                <th>Compteid</th>
                                <th>Nom Complet</th>
                                <th>Email</th>
                                <th>Telephone</th>
                                <th>Adresse</th>
                                <th>Datenaissance</th>
                                <th>Pays</th>
                                <th>Ville</th>
                                <th>Actions</th>
                            </tr>
    {% for personne in personnes %}
                              <tr>
                                  <td><a href="{{ path('compte_show', { 'id': personne.personneId }) }}">{{ personne.compte }}</a></td>
                                  <td>{{ personne.nom + personne.prenom}}</td>
                                  <td>{{ personne.email }}</td>
                                  <td>{{ personne.telephone }}</td>
                                  <td>{{ personne.adresse }}</td>
                                  <td>{% if personne.dateNaissance %}{{ personne.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                                  <td>{{ personne.pays }}</td>
                                  <td>{{ personne.ville }}</td>

                                  <td>
                                       <div class="btn-group">
                                              <a class="btn btn-primary" href="{{ path('personne_show', { 'id': personne.personneId }) }}">show</a>
                                              <a class="btn btn-success" href="{{ path('personne_edit', { 'id': personne.personneId }) }}">edit</a>
                                              <a class="btn btn-danger" href="{{ path('personne_delete', { 'id': personne.personneId }) }}">edit</a>
                                       </div>

                                  </td>
                              </tr>
    {% endfor %}
                           </tbody>
                        </table>
                      </section>
                  </div>
              </div>
              <!-- page end-->
          </section>
      </section>
      <!--main content end-->
  </section>
  <!-- container section end -->
    {% endblock %}