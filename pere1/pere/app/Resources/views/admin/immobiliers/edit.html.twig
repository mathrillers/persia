{% extends 'admin/layout.html.twig' %}

{% block body %}
{{ parent() }}
<body>
<!-- container section start -->
<section id="container" class="">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Modification des Informations du Bien</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Home</a></li>
                        <li><i class="fa fa-table"></i>Biens</li>
                        <li><i class="fa fa-th-list"></i>Modification Infos Bien</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->


            <a class="btn btn-navbar" href="{{ path('immobiliers_index') }}">Liste des Biens</a>


            <!--***********************************************************************************-->
            <!-- Form validations -->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Modification des Informations du Bien
                        </header>
                        <div class="panel-body">
                            <div class="form">

                                {{ form_start(edit_form) }}


                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.reference) }}</div>
                                    <div class="controls col-md-4"> {{ form_widget(edit_form.reference) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.adresse) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.adresse) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">
                                    <div class="col-lg-6 first" style="text-align: center">

                                        <label for="ville" class="required">Ville : </label>
                                    </div>   <div class="controls col-md-4">          <select id="ville" name="ville" class="form-control">
                                            {% for val in edform.ville.vars.choices %}
                                                <option value="{{ val.value }}" {% if val.value==immobilier.quartier.ville.villeId %} selected="selected" {% endif %}>
                                                    {{ val.label }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                   </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-6" style="text-align: center">
                                        <label for="mon_quartier" class="required">Quartier : </label>
                                    </div>  <div class="controls col-md-4">   <select id="mon_quartier" name="mon_quartier" class="form-control">
                                            <option value="{{ immobilier.quartier.quartierId }}">{{ immobilier.quartier.quartierNom }}</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.prix) }} </div>
                                    <div class="controls col-md-4">  {{ form_widget(edit_form.prix) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.nbrChambre) }}</div>
                                    <div class="controls col-md-4">  {{ form_widget(edit_form.nbrChambre) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.nbreSalon) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.nbreSalon) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.superficie) }}</div>
                                    <div class="controls col-md-4">  {{ form_widget(edit_form.superficie) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.jardin) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.jardin) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.garage) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.garage) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.etat) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.etat) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.proprietaire) }} </div>
                                    <div class="controls col-md-4">  {{ form_widget(edit_form.proprietaire) }}
                                    </div>


                                </div>
                                <br><br>

                                <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(edit_form.idType) }} </div>
                                    <div class="controls col-md-4">   {{ form_widget(edit_form.idType) }}
                                    </div>


                                </div>
                                <br><br>

                           {#     <div class="form-group">


                                    <div class="col-lg-6"
                                         style="text-align: center">{{ form_label(formfiles.files) }} </div>
                                    <div class="controls col-md-4">  {{ form_widget(formfiles.files) }}
                                    </div>


                                </div>
                                <br><br>#}

                                <div class="form-group">
                                    <div class="col-lg-offset-5 col-lg-10">
                                        <button class="btn btn-warning" type="submit">Save</button>
                                        <button class="btn btn-default" type="reset">Cancel</button>
                                    </div>
                                </div>
                                {{ form_end(edit_form,{'render_rest':false}) }}
                                {#</form>#}
                            </div>
                        </div>
                    </section>
                </div>
            </div>

            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/main.js') }}"></script>
{% endblock %}

