{% extends 'admin/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <body>
    <!-- container section start -->
<section id="container" class="">

    <section id="main-content">
    <section class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-table"></i> Gallery Bien</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Home</a></li>
                <li><i class="fa fa-table"></i>Biens</li>
                <li><i class="fa fa-th-list"></i>Photo Bien</li>
            </ol>
        </div>
    </div>
    <!-- page start-->


    <a class="btn btn-navbar" href="{{ path('immobiliers_index') }}">Liste des Biens</a>


    <!--***********************************************************************************-->
    <!-- container section start -->


    <div class="row">

        <div class="col-lg-12">

            <!--collapse start-->
            <div class="panel-group m-bot20" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion"
                               href="#collapseTwo">
                                Ajouter Une Photo
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse">
                        <div class="row">
                            <div class="col-lg-12">
                                <section class="panel">
                                    {{ form_start(form) }}
                                    <div class="form-group ">

                                        <div class="col-lg-6">{{ form_label(form.files) }}</div>
                                        <div class="col-lg-4">

                                            {{ form_widget(form.files, { 'attr': {'multiple': 'multiple' }}) }}

                                        </div>

                                    </div>

                                    {#<div class="panel-body col-lg-6 right"><a class="btn btn-success"
                                                                              href="{{ path('immobiliers_newphoto') }}">Ajouter
                                            Une Photo</a></div>#}

                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-6" style="text-align: center">
                                            <button class="btn btn-warning" type="submit">Save</button>
                                            <button class="btn btn-default" type="reset">Cancel</button>
                                        </div>
                                    </div>

                                    {{ form_end(form) }}
                                </section>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion"
                               href="#collapseOne">
                                Gallery Du Bien
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in">
                        <div class="tab-content">

                            <!-- profile -->
                            <div id="profile" class="tab-pane active">
                                <section class="panel">

                                    <div class="panel-body bio-graph-info" style="text-align: center">
                                        <h1>Gallery </h1>


                                        <div class="row">
                                            {% for imgs in img %}

                                                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <td>
                                                        <br>
                                                        <tr><img src="{{ asset(imgs.url) }}"
                                                                 class="img-responsive img-thumbnail"
                                                                 alt="Responsive image"
                                                                 style="width: 300px; height: 250px;"></tr>
                                                        <br>
                                                        <tr>
                                                            <div class="title" style="text-align: center;">

                                                                {% if imgs.isBienActive %}
                                                                    <a class="btn btn-success"
                                                                       href="{{ path('imagess_edit', { 'id':imgs.imageId}) }}">Pricipale</a>
                                                                {% else %}
                                                                    <a class="btn btn-warning"
                                                                       href="{{ path('imagess_edit', { 'id': imgs.imageId}) }}">Pricipale</a>
                                                                {% endif %}

                                                                &nbsp; {{ imgs.nom }} &nbsp;

                                                                <a class="btn btn-danger btn-sm right"
                                                                   href="{{ path('imagee_delete', { 'id': imgs.imageId}) }}">Delete</a>
                                                            </div>
                                                        </tr>
                                                    </td>


                                                </div><!--/.col-->

                                            {% endfor %}


                                        </div>
                                        <!--/.row-->
                                        {{ knp_pagination_render(img) }}
                                    </div>
                                    <!-- project team & activity end -->

                                </section>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <!--collapse end-->


        </div>

    </div>

    <!-- container section end -->
    <!-- Form validations -->



{% endblock %}