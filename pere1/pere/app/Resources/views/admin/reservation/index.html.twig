{% extends 'admin/layout.html.twig' %}

{% block body %}
{{ parent() }}
<body>
<!-- container section start -->
<section id="container" class="">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Liste des Reservations</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Home</a></li>
                        <li><i class="fa fa-table"></i>Reservation</li>
                        <li><i class="fa fa-th-list"></i>Liste Reservation</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading" style="text-align: center;border-top-style: solid;"><br>
                            <div class="col-lg-10">Tableau des Reservations </div><div class="col-lg-2"><a class="btn btn-success" href="{{ path('reservation_new') }}">Nouvelle Reservation</a></div>
                            <br><br>    </header>
                        {% if reservations %}
                        <div class="table-responsive">
                            <table class="table table-striped table-advance table-hover table-bordered table-condensed table-body-center" style="border-radius: 25px;">
                            <tbody>
                            <tr style="text-align: center;border-style: groove;">
                             {#
                                <th style="text-align: center;border-style: groove;">Datereservation</th>#}
                                <div > <td style="text-align: center;border-style: groove;">Reservation Réference</td></div>
                                    <div > <th style="text-align: center;border-style: groove;">Date de La Réservation</th></div>
                                        <div > <th style="text-align: center;border-style: groove;">Montant</th></div>
                                            <div > <th style="text-align: center;border-style: groove;">Actions</th></div>
                            </tr>
                            {% for reservation in pagination %}
                                <tr style="text-align: center;border-style: groove;">

                                    {#  <td style="text-align: center;border-style: groove;">{{ reservation.Da }}</td>
                                  <td style="text-align: center;border-style: groove;">{{ reservation.password }}</td>
                                 {f reservation.active != true %}
                                      <td style="text-align: center;border-style: groove;">ON</td>
                                  {% else %}
                                      <td style="text-align: center;border-style: groove;">OFF</td>
                                  {% endif %}#}
                                    <div ><td style="text-align: center;border-style: groove;">  <a href="{{ path('paiement_index', { 'id': reservation.reservationId }) }}">{{ reservation.reservationId }}</a></td></div>
                                    <div > <td style="text-align: center;border-style: groove;">{{ reservation.dateReservation|date('j F,Y H:i:s') }}</td></div>

                                    <div ><td style="text-align: center;border-style: groove;">{{ reservation.montant }}</td></div>


                                    <div ><td style="text-align: center;border-style: groove;">
                                            <div class="btn-group">
                                                <a class="btn btn-primary " style="width: 90px"
                                                   href="{{ path('reservation_show', { 'id': reservation.reservationId }) }}">Afficher</a>
                                            </div> <br><br> <div class="btn-group">    <a class="btn btn-success " style="width: 90px"
                                                   href="{{ path('reservation_edit', { 'id': reservation.reservationId}) }}">Modifier</a>
                                            </div> <br><br> <div class="btn-group">    <a class="btn btn-danger " style="width: 90px"
                                                   href="{{ path('reservation_delete', { 'id':reservation.reservationId}) }}">Supprimer</a>



                                            </div>

                                        </td></div>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                            </div>
                        <div class="navigation" style="text-align: center;">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                        {% else %}
                            <div style="text-align: center;" class="t-text-area"><h2>La Liste est Vide ...</h2><br></div>
                        {% endif %}
                    </section>
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
{% endblock %}
