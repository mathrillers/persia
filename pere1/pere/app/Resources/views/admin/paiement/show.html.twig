{% extends 'admin/layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <!-- container section start -->
    <section id="container" class="">

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="page-header"><i class="fa fa-user-md"></i> Information du Paiement</h3>
                        <ol class="breadcrumb">
                            <li><i class="fa fa-home"></i><a href="../layout.html.twig">Home</a></li>
                            <li><i class="icon_documents_alt"></i>Paiements</li>
                            <li><i class="fa fa-user-md"></i>Information Paiement</li>
                        </ol>
                    </div>
                </div>
                <a class="btn btn-navbar" href="{{ path('paiement_index') }}">Liste des Paiements</a>

                <!-- page start-->
                <div class="row">
                    <div class="col-lg-12">


                        <div class="panel-body">
                            <div class="tab-content">

                                <!-- profile -->
                                <div id="profile" class="tab-pane active">
                                    <section class="panel">

                                        <div class="panel-body bio-graph-info">
                                            <h1>Information Paiement </h1>

                                            <div class="row">
                                                <div class="bio-row">
                                                    <p><span class="label label-info">Paiement ID :</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ paiement.paiementId }}
                                                    </p>
                                                </div>
                                                <div class="bio-row">
                                                    <p><span class="label label-info">Date de Paiement :</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{% if paiement.datePaiement %}{{ paiement.datePaiement|date('Y-m-d H:i:s') }}{% endif %}
                                                    </p>
                                                </div>
                                                <div class="bio-row">
                                                    <p><span class="label label-info">Montant :</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ paiement.montant }}
                                                    </p>
                                                </div>
                                                <div class="bio-row">
                                                    <p><span class="label label-info">Mode de Paiement :</span> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{ paiement.modePaiement }}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                                <!-- edit-profile -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
    </section>
    <!-- container section end -->
{% endblock %}


