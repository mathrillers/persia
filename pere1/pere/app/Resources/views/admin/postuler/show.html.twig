{% extends 'admin/layout.html.twig' %}
{% block body %}
{{ parent() }}
<body>
<!-- container section start -->
<section id="container" class="">
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Informations de la Postulation</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Dashboard</a></li>
                        <li><i class="fa fa-table"></i>Postulations</li>
                        <li><i class="fa fa-th-list"></i>Information Postulation</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->
            <a class="btn btn-navbar" href="{{ path('postuler_index') }}">Liste des Postulations</a>
            <!--***********************************************************************************-->
            <!-- Form validations -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel-body">
                        <div class="tab-content">
                            <!-- profile -->
                            <div id="profile" class="tab-pane active">
                                <section class="panel">
                                    <div class="panel-body bio-graph-info">
                                        <h1>Information Postulation </h1>
                                        <div class="row">
                                            <div class="bio-row" style="text-align: center">
                                                <div class="col-lg-6"><span
                                                            class="label label-info">Post Reference :</span>
                                                </div>
                                                <div class="col-lg-6">{{ postuler.postId }}
                                                </div>
                                            </div>
                                            <div class="bio-row" style="text-align: center">
                                                <div class="col-lg-6"><span class="label label-info">Date de Postulation :</span>
                                                </div>
                                                <div class="col-lg-6">{% if postuler.datePost %}{{ postuler.datePost|date('Y-m-d H:i:s') }}{% endif %}
                                                </div>
                                            </div>
                                            <div class="bio-row" style="text-align: center">
                                                <div class="col-lg-6"><span class="label label-info">Statut :</span>
                                                </div>
                                                <div class="col-lg-6">{{ postuler.statut }}
                                                </div>
                                            </div>
                                            <div class="bio-row" style="text-align: center">
                                                <div class="col-lg-6"><span class="label label-info">Montant :</span>
                                                </div>
                                                <div class="col-lg-6">{{ postuler.postMontant }}/DH
                                                </div>
                                            </div>
                                            <div class="bio-row" style="text-align: center">
                                                <div class="col-lg-6"><span
                                                            class="label label-info">PÃ©riode voulu :</span>
                                                </div>
                                                {% if typedelai %}
                                                <div class="col-lg-6">{{postuler.annonce.periodeDelai }} Jour
                                                    {% else %}
                                                    <div class="col-lg-6">{{ postuler.annonce.periodeDelai  }} Mois
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                    <!-- edit-profile -->
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
{% endblock %}



