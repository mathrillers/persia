
{% extends 'admin/layout.html.twig' %}
{% block body %}
{{ parent() }}
<body>
<!-- container section start -->
<section id="container" class="">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa-table"></i> Liste des Agences</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="{{ path('index_page') }}">Home</a></li>
                        <li><i class="fa fa-table"></i>Agences</li>
                        <li><i class="fa fa-th-list"></i>Liste des Agences</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->


            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading" style="text-align: center;border-top-style: solid;"><br>
                            <div class="col-lg-10" style="text-align: center;">Tableau des Agences </div><div class="col-lg-2"><a class="btn btn-success" href="{{ path('agencee_new') }}">Nouvelle Agence</a></div>
                            <br><br>
                        </header>
                        {% if agences %}
<div class="table-responsive">
    <table class="table table-striped table-advance table-hover table-bordered table-condensed table-body-center" >

                                <thead>
                                <tr style="text-align: center;border-style: groove;">
                                    <th style="text-align: center;border-style: groove;">Logo</th>
                                    <th style="text-align: center;border-style: groove;">Nom</th>
                                    <th style="text-align: center;border-style: groove;">Adresse</th>
                                    <th style="text-align: center;border-style: groove;">Telephone</th>
                                    <th style="text-align: center;border-style: groove;">Email</th>
                                    <th style="text-align: center;border-style: groove;">Numerocb</th>
                                    <th style="text-align: center;border-style: groove;">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for agence in pagination %}
                                    <tr style="text-align: center;border-style: groove;">

                                        <td style="height: 200px;width: 200px;text-align: center;border-style: groove;">{% if agence.logo %}<a href="{{ path('agencee_show', { 'id': agence.agenceId }) }}" ><img src="{{ asset(agence.logo) }}"
                                                                                                class="img-responsive img-thumbnail"
                                                                                                alt="Responsive image"
                                                                                                style=" max-width: 100%;max-height: 100%;min-width: 100%;min-height: 100%"></a>{% else %}Aucune Photo{% endif %}</td>
                                        <td style="text-align: center;border-style: groove;">{{ agence.nom }}</td>
                                        <td style="text-align: center;border-style: groove;">{{ agence.adresse }}</td>
                                        <td style="text-align: center;border-style: groove;">{{ agence.telephone }}</td>
                                        <td style="text-align: center;border-style: groove;">{{ agence.email }}</td>

                                        <td style="text-align: center;border-style: groove;">{{ agence.numeroCb }}</td>

                                        <td style="text-align: center;border-style: groove;">
                                            <div class="btn-group">
                                         <a class="btn btn-warning" style="width: 90px"
                                                            href="{{ path('agencee_edit', { 'id': agence.agenceId }) }}">Modifier</a>
                                            </div>

                                        </td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
</div>
                        <div class="navigation" style="text-align: center;">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                        {% else %}
                            <div style="text-align: center;" class="t-text-area"><h2>La Liste est Vide ...</h2><br></div>
                        {% endif %}
                    </section>
                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
</section>
<!-- container section end -->
{% endblock %}
